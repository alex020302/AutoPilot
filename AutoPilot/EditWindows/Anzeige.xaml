<Window x:Class="EditorTest.EditViews.Anzeige"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EditorTest.EditViews"
        mc:Ignorable="d"
        Title="Anzeige" Height="300" Width="300">
    <StackPanel>
        <StackPanel Background="{StaticResource DunkelBlau}">
            <StackPanel
                Height="100"
                Orientation="Horizontal"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
            >
                <Label FontSize="40"
                       VerticalAlignment="Center"
                       Margin="10"
                       FontWeight="Bold">Assistent</Label>

            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Vertical"
                    
                    Margin="10"
                    HorizontalAlignment="Center">
            <Label 
                FontSize="24" FontWeight="Bold"
                HorizontalAlignment="Center"
                x:Name="tX"></Label>
            <Label
                FontSize="24" FontWeight="Bold"
                HorizontalAlignment="Center"
                x:Name="tY"></Label>

        </StackPanel>
    </StackPanel>
</Window>
