<Application x:Class="AutoPilot.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AutoPilot"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="DunkelBlau" Color="#135693" />
        <SolidColorBrush x:Key="HellBlau" Color="#6298CA" />

        <LinearGradientBrush x:Key="Hintergrund">
            <GradientStop Offset="0" Color="white"/>
            <GradientStop Offset="1" Color="#ececec"/>
        </LinearGradientBrush>
    </Application.Resources>

</Application>
